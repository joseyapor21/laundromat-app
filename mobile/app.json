{
  "expo": {
    "name": "Laundromat",
    "slug": "laundromat-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2563eb"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.laundromat.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan QR codes on washers and dryers.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "entitlements": {
        "aps-environment": "production"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2563eb"
      },
      "package": "com.laundromat.app",
      "permissions": [
        "android.permission.CAMERA"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Laundromat to access your camera to scan machine QR codes."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#2563eb",
          "sounds": []
        }
      ],
      "react-native-ble-plx"
    ],
    "extra": {
      "eas": {
        "projectId": "c4b84071-a3e6-4737-ad52-2543f6e2bc6d"
      }
    },
    "owner": "joseyapor21",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/c4b84071-a3e6-4737-ad52-2543f6e2bc6d"
    }
  }
}
