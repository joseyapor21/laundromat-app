{
  "expo": {
    "name": "Laundromat",
    "slug": "laundromat-app",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2563eb"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.laundromat.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan QR codes and take clock-in photos.",
        "NSLocationWhenInUseUsageDescription": "This app uses your location to record where you clock in and out.",
        "NSBluetoothAlwaysUsageDescription": "This app uses Bluetooth to connect to thermal label printers for printing bag labels.",
        "NSBluetoothPeripheralUsageDescription": "This app uses Bluetooth to connect to thermal label printers for printing bag labels.",
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": ["audio"]
      },
      "buildNumber": "10"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2563eb"
      },
      "package": "com.laundromat.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "versionCode": 2
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Laundromat to access your camera to scan machine QR codes and take clock-in photos."
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Allow Laundromat to use your location to record where you clock in and out."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#2563eb",
          "sounds": [
            "./assets/neworder.wav",
            "./assets/alarm.wav"
          ]
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow Laundromat to access your microphone."
        }
      ],
      "react-native-ble-plx"
    ],
    "extra": {
      "eas": {
        "projectId": "c4b84071-a3e6-4737-ad52-2543f6e2bc6d"
      }
    },
    "owner": "joseyapor21",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/c4b84071-a3e6-4737-ad52-2543f6e2bc6d"
    }
  }
}
